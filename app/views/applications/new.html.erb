<% if flash[:error] %>
    <p style="color: red;"><%= flash[:error] %></p>
<% end %>

<%= form_with url: '/pets', local: true do |form| %>
  <div>
    <%= form.label :applicant_name %>
    <%= form.text_field :applicant_name %>
  </div>
  <div>
    <%= form.label :street_address %>
    <%= form.text_field :street_address %>
  </div>
  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>
  <div>
    <%= form.label :zip_code %>
    <%= form.text_field :zip_code %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div> 
    <%= "Add a Pet to this Application" %>
  </div>

  <div>
  <%= form_with url: "/applications/new", method: :get, local: true do |f| %>
    <%= f.label "search" %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>
  </div>  
  
  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>